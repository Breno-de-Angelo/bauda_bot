<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="bauda_diff">

    <xacro:property name="yaml_file" value="$(find description_bauda_akm)/config/vehicle.yaml" />
    <xacro:property name="vehicle_dict" value="${xacro.load_yaml(yaml_file)}"/> 
    <xacro:property name="lidar_x" value="${vehicle_dict['lidar']['x']}" /> 
    <xacro:property name="lidar_y" value="${vehicle_dict['lidar']['y']}" /> 
    <xacro:property name="lidar_z" value="${vehicle_dict['lidar']['z']}" /> 

    <joint name="base_lidar_joint" type="fixed">
        <parent link="chassis"/>
        <child link="lidar_base"/>
        <origin xyz="${lidar_x} ${lidar_y} ${lidar_z}" rpy="0 0 0"/>
    </joint>

    <link name="lidar_base">
        <visual>
            <!-- <origin xyz="0 0 0.029335"/> -->
            <geometry>
                <cylinder radius="0.04267" length="0.05867"/>
            </geometry>
        </visual>
        <collision>
            <!-- <origin xyz="0 0 0.029335"/> -->
            <geometry>
                <cylinder radius="0.04267" length="0.05867"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="1.2" />
            <inertia ixx="0.001087473" ixy="0.0" ixz="0.0"
                    iyy="0.001087473" iyz="0.0"
                    izz="0.001092437" />
        </inertial>
    </link>

    <joint name="lidar_joint" type="continuous">
        <parent link="lidar_base"/>
        <child link="laser_frame"/>
        <origin xyz="0 0 0.05867" rpy="0 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="laser_frame">
        <visual>
            <!-- <origin xyz="0 0 0.095455"/> -->
            <geometry>
                <cylinder radius="0.04267" length="0.07357"/>
            </geometry>
        </visual>
        <!-- <collision>
            <origin xyz="0 0 0.095455"/>
            <geometry>
                <cylinder radius="0.04267" length="0.07357"/>
            </geometry>
        </collision> -->
        <inertial>
            <mass value="1.2" />
            <inertia ixx="0.000090623" ixy="0.0" ixz="0.0"
                    iyy="0.000090623" iyz="0.0"
                    izz="0.000091036" />
        </inertial>
    </link>
 
        
    <gazebo reference="laser_frame">
        <material>Gazebo/Red</material>
        <sensor name="laser" type="ray">
            <pose> 0 0 0 0 0 0 </pose>
            <visualize>true</visualize>
            <update_rate>10</update_rate>
            <ray>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.02</stddev>
                </noise>
                <scan>
                    <horizontal>
                        <samples>32</samples>
                        <resolution>1</resolution>
                        <min_angle>-0.53529248</min_angle>
                        <max_angle>0.18622663</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.05</min>
                    <max>70</max>
                    <resolution>0.02</resolution>
                </range>
            </ray>
            <plugin name="laser_controller" filename="libgazebo_ros_ray_sensor.so">
                <ros>
                    <argument>~/out:=scan</argument>
                </ros>
                <output_type>sensor_msgs/LaserScan</output_type>
                <frame_name>laser_frame</frame_name>
            </plugin>
        </sensor>
    </gazebo>

</robot>