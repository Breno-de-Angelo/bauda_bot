<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <material name="green">
        <color rgba="0 1 0 1"/>
    </material>

    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>

    <link name="base_link" />

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.40 0 0" rpy="0 0 0"/>
    </joint>


    <!-- Chassis -->
    <link name="chassis">
        <visual>
            <origin xyz="0.40 0 0.15" rpy="0 0 0"/>
            <geometry>
                <box size="0.80 0.30 0.30"/>
            </geometry>
            <material name="white"/>
        </visual>    
        <collision>
            <origin xyz="0.40 0 0.15" rpy="0 0 0"/>
            <geometry>
                <box size="0.80 0.30 0.30"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="1.0" x="0.80" y="0.30" z="0.30">
            <origin xyz="0.40 0 0.15" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>


    <!-- Left front wheel -->
    <joint name="lf_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="lf_wheel"/>
        <origin xyz="0.30 0.165 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="lf_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.04" length="0.03"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.04" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.03" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>


    <!-- Right front wheel -->
    <joint name="rf_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rf_wheel"/>
        <origin xyz="0.30 -0.165 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="rf_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.04" length="0.03"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.04" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.03" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>


    <!-- Left rear wheel -->
    <joint name="lr_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="lr_wheel"/>
        <origin xyz="-0.30 0.165 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="lr_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.04" length="0.03"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.04" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.03" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>


    <!-- Right rear wheel -->
    <joint name="rr_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rr_wheel"/>
        <origin xyz="-0.30 -0.165 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="rr_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.04" length="0.03"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.04" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.03" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    
</robot>